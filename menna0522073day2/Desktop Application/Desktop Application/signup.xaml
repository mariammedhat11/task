        <TextBox x:Name="p_txt" HorizontalAlignment="Left" Margin="143,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" Height="26" FontSize="18"/>
        <TextBox x:Name="usernametextbox" HorizontalAlignment="Left" Margin="143,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" Height="26" FontSize="18"/>
        <ComboBox x:Name="combo_txt" Width="120" Height="NaN" Margin="212,240,468,191" SelectionChanged="ComboBox_SelectionChanged">
