<Page x:Class="Desktop_Application.profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="profile">

    <Grid Height="NaN" Margin="0,0,0,-280">
        <Grid.Background>
            <ImageBrush ImageSource="/Snapchat-1564189859.jpg"/>
        </Grid.Background>
        <DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="0,408,0,10" SelectionChanged="DataGrid_SelectionChanged"/>

    </Grid>
</Page>
